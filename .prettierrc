{
  "trailingComma": "none",
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    },
    {
      "files": "*.apex",
      "options": {
        "parser": "apex",
        "plugins": ["prettier-plugin-apex"]
      }
    }
  ]
}











