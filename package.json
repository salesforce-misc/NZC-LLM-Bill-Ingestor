{
  "name": "nzc-llm-bill-ingestor",
  "version": "1.1.0",
  "description": "AI-powered solution for automated bill processing and energy consumption tracking in Salesforce Net Zero Cloud",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "sfdx-lwc-jest",
    "test:unit:watch": "sfdx-lwc-jest --watch",
    "test:unit:debug": "sfdx-lwc-jest --debug",
    "test:unit:coverage": "sfdx-lwc-jest --coverage",
    "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,xml,yaml,yml}\"",
    "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,xml,yaml,yml}\"",
    "lint": "eslint **/lwc/**",
    "postinstall": "husky install",
    "precommit": "lint-staged",
    "deps:report": "./scripts/generate-dependency-report.sh",
    "deps:list": "npm list --depth=0",
    "deps:outdated": "npm outdated",
    "deps:audit": "npm audit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/salesforce-misc/NZC-LLM-Bill-Ingestor.git"
  },
  "keywords": [
    "salesforce",
    "net-zero-cloud",
    "ai",
    "energy-tracking",
    "lwc",
    "einstein",
    "sustainability"
  ],
  "author": "Salesforce Community",
  "license": "Apache-2.0",
  "devDependencies": {
    "@lwc/eslint-plugin-lwc": "^3.3.0",
    "@prettier/plugin-xml": "^3.2.0",
    "@salesforce/eslint-config-lwc": "^4.1.2",
    "@salesforce/eslint-plugin-aura": "^3.0.0",
    "@salesforce/eslint-plugin-lightning": "^2.0.0",
    "@salesforce/sfdx-lwc-jest": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^29.9.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-apex": "^2.0.1"
  },
  "dependencies": {
    "@salesforce-ux/design-system": "^2.28.1"
  },
  "lint-staged": {
    "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
      "prettier --write"
    ],
    "**/{aura,lwc}/**": [
      "eslint"
    ]
  },
  "volta": {
    "node": "18.17.1",
    "npm": "9.6.7"
  }
}

